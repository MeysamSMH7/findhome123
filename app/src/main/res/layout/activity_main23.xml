<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="test.test.com.myapplication.Main23Activity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="نوع معامله" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نمیخوامش"
                android:id="@+id/checkBox_moamele"
                android:layout_gravity="right" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGP_search_1"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="فروش"
                    android:id="@+id/radioButton8" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رهن"
                    android:id="@+id/radioButton9" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="نوع ملک" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نمیخوامش"
                android:id="@+id/checkBox_melk"
                android:layout_gravity="right" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ac7777"
                android:id="@+id/radioGP_search_2"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مسکونی"
                    android:id="@+id/radioButton10" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اداری"
                    android:id="@+id/radioButton11" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تجازی"
                    android:id="@+id/radioButton12" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مستغلات"
                    android:id="@+id/radioButton13" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمین"
                    android:id="@+id/radioButton14" />
            </RadioGroup>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f43f3f"
                android:visibility="visible" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بر اساس کد ملک"
                    android:id="@+id/textView8" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بلد نیستم"
                    android:id="@+id/checkBox2"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:layout_gravity="center_horizontal"
                    android:hint="کد ملک"
                    android:enabled="true"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44ce48"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مساحت زمین"
                    android:id="@+id/textView6" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نمیخوامش"
                    android:id="@+id/checkBoxABC1"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextMAXmasahatZamin_search"
                    android:layout_gravity="center_horizontal"
                    android:hint="بیشترین مساحت زمین"
                    android:enabled="true"
                    android:inputType="number" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextMINmasahatZamin_search"
                    android:layout_gravity="center_horizontal"
                    android:hint="کمترین مساحت زمین"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="مساحت ساخته شده"
                    android:id="@+id/textView5" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نمیخوامش"
                    android:id="@+id/checkBoxABC2"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextMAXMasahatBuild_search"
                    android:layout_gravity="center_horizontal"
                    android:hint="بیشتر مساحت ساخته شده"
                    android:inputType="number" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextMINMasahatBuild_search"
                    android:layout_gravity="center_horizontal"
                    android:hint="کمترین مساحت ساخته شده"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44ce48" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="قیمت"
                    android:id="@+id/textView7" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نمیخوامش"
                    android:id="@+id/checkBoxABC3"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextMAXPrice_serach"
                    android:layout_gravity="center_horizontal"
                    android:hint="بیشترین قیمت"
                    android:inputType="number" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextMINPrice_serach"
                    android:layout_gravity="center_horizontal"
                    android:hint="کمترین قیمت"
                    android:inputType="number" />
            </LinearLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نمیخوامش"
                android:id="@+id/checkBox_spinner"
                android:layout_gravity="right" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_search"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بسرچ"
                android:id="@+id/button10" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listView_get_DATA2"
                android:visibility="gone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageView_NothingToShow2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/nothing_to_show"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
